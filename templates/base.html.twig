{# template/base.html.twig #}
<!DOCTYPE html>
<html lang="{{ app.request.locale }}" data-bs-theme="light">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="">
        <meta name="author" content="">
        <meta name="generator" content="">
        
        <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('favicon/apple-touch-icon.png') }}">
        <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('favicon/favicon-32x32.png') }}">
        <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('favicon/favicon-16x16.png') }}">
        <link rel="manifest" href="{{ asset('favicon/site.webmanifest') }}">
        
        <title>{% block title %}Speedtest{% endblock %}</title>

        {% block stylesheets %}
            <link href="{{ asset('bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">
            <link href="{{ asset('styles/app.css') }}" rel="stylesheet">
            <link href="{{ asset('bootstrap-icons/bootstrap-icons.min.css') }}" rel="stylesheet">
        {% endblock %}

        {% block javascripts_header %}
        {% endblock %}
    </head>
    <body class="d-flex flex-column min-vh-100">
        <header class="mb-3">
            <nav class="navbar navbar-expand-lg navbar-dark bg-success">
                <div class="container-fluid">
                    <a class="navbar-brand text-decoration-none" href="{{ path('app_speedtest_index') }}">
                        <i class="bi bi-speedometer2"></i> Speedtest
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMenu" aria-controls="navbarMenu" aria-expanded="false" aria-label="Navigation menu">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    {% include '_menu.html.twig' %}
                </div>
            </nav>
            <nav aria-label="breadcrumb" class="bg-success-subtle shadow border-bottom border-success" style="--bs-breadcrumb-divider: '>';">
                <ol class="breadcrumb m-0 p-2">
                    <li class="breadcrumb-item"><a href="{{ path('app_speedtest_index') }}" class="text-decoration-none"><i class="bi bi-house"></i> {{ 'home'|trans({},'label') }}</li></a>
                        {% block breadcrumb %}{% endblock %}
                </ol>
            </nav>
        </header>
        <main class="mb-3">
            {% block body %}{% endblock %}
        </main>
        <footer class="mt-auto"></footer>
        {% block javascripts_footer %}
        
            <script src="{{ asset('jquery/jquery-3.7.1.min.js') }}"></script>
            <script src="{{ asset('jquery-loading/loadingoverlay.min.js') }}"></script>
            <script src="{{ asset('bootstrap/js/bootstrap.bundle.min.js') }}"></script>
            <script src="{{ asset('js/app.js') }}"></script>
        {% endblock %}
    </body>
</html>
